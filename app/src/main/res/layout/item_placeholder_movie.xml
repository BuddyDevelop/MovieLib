<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/poster_image_placeholder"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="120dp"
                    android:minHeight="150dp"
                    android:background="@color/colorGrey"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/image_description"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

            <TextView
                    android:id="@+id/title_placeholder"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/placeholder_text_height"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:background="@color/colorGrey"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/page_title_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/poster_image_placeholder"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:layout_width="@dimen/placeholder_text_long_width"
                    android:layout_height="@dimen/placeholder_text_height"
                    android:id="@+id/release_date_placeholder"
                    android:background="@color/colorGrey"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="@dimen/input_text_size"
                    app:layout_constraintTop_toBottomOf="@id/title_placeholder"
                    app:layout_constraintStart_toEndOf="@id/poster_image_placeholder" />

            <ImageView
                    android:layout_width="@dimen/placeholder_text_height"
                    android:layout_height="@dimen/placeholder_text_height"
                    android:layout_margin="5dp"
                    android:id="@+id/star_image_placeholder"
                    android:src="@drawable/ic_star_golden_24dp"
                    android:tint="@color/colorGrey"
                    app:layout_constraintTop_toBottomOf="@id/release_date_placeholder"
                    app:layout_constraintStart_toEndOf="@id/poster_image_placeholder"
                    android:contentDescription="@string/image_description" />
            <TextView
                    android:layout_width="@dimen/placeholder_text_small_width"
                    android:layout_height="@dimen/placeholder_text_height"
                    android:id="@+id/vote_placeholder"
                    android:background="@color/colorGrey"
                    app:layout_constraintTop_toBottomOf="@id/release_date_placeholder"
                    app:layout_constraintStart_toEndOf="@id/star_image_placeholder"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"/>

            <TextView
                    android:layout_width="@dimen/placeholder_text_small_width"
                    android:layout_height="@dimen/placeholder_text_height"
                    android:background="@color/colorGrey"
                    android:id="@+id/slash_placeholder"
                    app:layout_constraintTop_toBottomOf="@id/release_date_placeholder"
                    app:layout_constraintStart_toEndOf="@id/vote_placeholder"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp" />

            <TextView
                    android:layout_width="@dimen/placeholder_text_small_width"
                    android:layout_height="@dimen/placeholder_text_height"
                    android:id="@+id/vote_value_placeholder"
                    android:background="@color/colorGrey"
                    app:layout_constraintTop_toBottomOf="@id/release_date_placeholder"
                    app:layout_constraintStart_toEndOf="@id/slash_placeholder"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp" />

            <TextView
                    android:layout_width="@dimen/placeholder_text_medium_width"
                    android:layout_height="@dimen/placeholder_text_height"
                    android:id="@+id/popularity_placeholder"
                    android:background="@color/colorGrey"
                    android:textSize="10sp"
                    android:padding="2dp"
                    app:layout_constraintTop_toBottomOf="@id/star_image_placeholder"
                    app:layout_constraintStart_toEndOf="@id/poster_image_placeholder"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

            <TextView
                    android:layout_width="@dimen/placeholder_text_small_width"
                    android:layout_height="@dimen/placeholder_text_height"
                    android:id="@+id/popularity_value_placeholder"
                    android:textSize="10sp"
                    app:layout_constraintTop_toBottomOf="@id/star_image_placeholder"
                    app:layout_constraintStart_toEndOf="@id/popularity_placeholder"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:background="@color/colorGrey"
                    android:padding="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp" />

            <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="@string/image_description"
                    android:id="@+id/heart_button_placeholder"
                    android:src="@drawable/ic_favorite_border_primary_24dp"
                    android:tint="@color/colorGrey"
                    android:background="@color/colorGrey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>