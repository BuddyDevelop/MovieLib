<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <View
                    android:id="@+id/poster_image_placeholder"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:background="@color/colorGrey"
                    android:layout_margin="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <View
                    android:id="@+id/title_placeholder"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/placeholder_text_height"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/colorGrey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/poster_image_placeholder"
                    app:layout_constraintTop_toTopOf="parent" />

            <View
                    android:layout_width="@dimen/placeholder_text_long_width"
                    android:layout_height="@dimen/placeholder_text_height"
                    android:id="@+id/release_date_placeholder"
                    android:background="@color/colorGrey"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toBottomOf="@id/title_placeholder"
                    app:layout_constraintStart_toEndOf="@id/poster_image_placeholder" />

            <View
                    android:layout_width="80dp"
                    android:layout_height="@dimen/placeholder_text_height"
                    android:id="@+id/grade_placeholder"
                    android:background="@color/colorGrey"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toBottomOf="@id/release_date_placeholder"
                    app:layout_constraintStart_toEndOf="@id/poster_image_placeholder" />

            <View
                    android:layout_width="@dimen/placeholder_text_medium_width"
                    android:layout_height="@dimen/placeholder_text_height"
                    android:id="@+id/popularity_placeholder"
                    android:background="@color/colorGrey"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toBottomOf="@id/grade_placeholder"
                    app:layout_constraintStart_toEndOf="@id/poster_image_placeholder" />

            <View
                    android:layout_width="@dimen/placeholder_text_small_width"
                    android:layout_height="@dimen/placeholder_text_height"
                    android:id="@+id/popularity_value_placeholder"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toBottomOf="@id/grade_placeholder"
                    app:layout_constraintStart_toEndOf="@id/popularity_placeholder"
                    android:background="@color/colorGrey" />

            <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorGrey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>